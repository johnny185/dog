		//资源单位获取
		function getReUn(resourceUnit) {
			pds.ajaxSubmit({
				url : "common/getResUnitList",
				success : function(res) {
					var el = $api.byId("reUn");
					var data = res.data;
					$.each(data, function(index, val) {
