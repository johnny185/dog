	 //根据用户id和任务状态加载数据
	 function gettaskDetail(map,pageParam){
	      
	     $.extend(pageParam,{taskId:taskId});
	        pds.ajaxSubmit({
				url:"app/farmland/task_list",
				data:pageParam,
				success:function(e){
				    var pointArray = [];
				    //var point ={};
					var gloableData = e.data;
                     
                      for(var i=0;i<gloableData.length;i++){
		                var point ={};
				        point.lat =  gloableData[i].latItude;
				        point.lon =  gloableData[i].longItude;
				        point.id =  gloableData[i].id;
				        pointArray[i] = point;
				      }
//				       map.addAnnotations({
//						    annotations:pointArray,
//				            draggable: true
//					   });
                    map.addAnnotations({
					    annotations: [{
					        id: pageParam.taskId, lon:pageParam.lon, lat:pageParam.lat
					    }],
					    draggable: false
					}, function(ret){
					
						//获取用户当前坐标	
					     map.getLocation({
						    accuracy: '10m',
						    autoStop: true,
						    filter: 1
						}, function(mre, err){
						    
						    if(mre.status){
						    
								//添加这线任务点到用户坐标    
									    
									    
								//获取两点之间的距离        
					            map.getDistance({
									    start: {
									        lon: pageParam.lon,
									        lat: pageParam.lat
									    },
									    end: {
									        lon: mre.lon,
									        lat: mre.lat
									    }
							   },function(pre){
//							         var pageParamdata={}
//							         pageParamdata.id = taskId;
//							         pageParamdata.landname = landname;
//							         pageParamdata.farmId = farmId;
							         
									  if(pre.status){
									      if( pre.distance<=50){
									            bMap.stopLocation();
									            api.toast({
    														msg: '正在加载中...',
   								 							duration: 2000,
    														location: 'middle'
															});
					                            $api.openWin({
										           name: 'fieldData',
										           url: 'widget://html/farmData/fieldData.html',
										           pageParam: {
											           "id":taskId,
											           "landName":landname,
											           "farmId":farmId
										           },
						                           reload:true,
										           animation:{ 
									                 type:"movein",              //动画类型（详见动画类型常量）
									                 subType:"from_right",       //动画子类型（详见动画子类型常量）
