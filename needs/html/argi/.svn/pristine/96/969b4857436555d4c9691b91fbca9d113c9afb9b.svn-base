	//获得地址坐标
	apiready=function(){		
			getCusterGradeDict();//初始化下拉框的值
			findCusterStatusDict();//初始化下拉框的值	
				
		var map = api.require('bMap');
		map.getLocation({
		    accuracy: '100m',
		    autoStop: true,
		    filter: 1
		}, function(ret, err){
		    if(ret.status){				        
		        var lon = ret.lon;//大
		        var lat = ret.lat;//小,
		         $(".longitude").html(lon);
		          $(".latitude").html(lat);
		        map.getNameFromCoords({
				    lon: lon,
				    lat: lat
				},function(ret,err){
				    if(ret.status){						       
				        var pc = null;
				        if(ret.province==ret.city){
				         	pc=ret.province;
				        }else{
				        	pc=ret.province+ret.city+ret.district;
				        }
				        $(".location").html(pc);
//				        getCurDate();	//日期	
				        //locationAjax(ret.province,ret.city);						        
				    }
				});
		    }else{
		        //api.alert({msg: err.code});
		    }
		});													
	};

