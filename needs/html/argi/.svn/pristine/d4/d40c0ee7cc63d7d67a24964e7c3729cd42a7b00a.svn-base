//删除一行资源信息
function removeResource(id) {
	var farmingDataResource = {};
	farmingDataResource.id = id;
	pds.ajaxSubmit({
		url : "app/farmingdataresource/delete",
		data : {
			"data" : JSON.stringify(farmingDataResource)
		},
		success : function(e) {
			api.alert({
				msg : "删除成功!"
			});
			//$(_this).parent().remove();
		},
		error : function(e) {
			api.alert({
				msg : "服务器错误，请联系管理员!"
			});
		}
	});
}
