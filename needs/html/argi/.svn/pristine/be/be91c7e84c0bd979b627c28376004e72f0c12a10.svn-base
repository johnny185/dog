<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>客户管理</title>
		<link rel="stylesheet" type="text/css" href="../../../css/api.css"/>
		<link rel="stylesheet" type="text/css" href="../../../css/common.css"/>
		<link rel="stylesheet" type="text/css" href="../../../css/mystyle.css">
		<link rel="stylesheet" type="text/css" href="../../../css/mysettings.css">
	</head>
	<body>
		<div class="container">
			<div class="full-main">
				<!-- 顶部菜单栏 -->
				<div class = 'banner fixed center'>
					<span class="banner-title center"> <h4 >客户管理</h4> </span>
					<a href="javascript:void(0)"; onclick="back();"> <span class = "banner-btn banner-back-btn">
						<!-- <input id = 'return-btn' type='button' name='return' value=''> -->
					</span> </a>
					<div class="banner-right">
						<button class="argi-btn argi-btn-success argi-btn-sm argi-round" style="width:50px;"  id ="punchCard" onclick="punchCard(this)">
							签到
						</button>
					</div>
				</div>
				<!-- 内容区域 -->
				<div class="sub-container-notop">
					<div class="argi-tabs">
						<ul class="argi-tabs-nav argi-nav even-block-2">
							<li class="center argi-active">
								<a href="#">客户信息</a>
							</li>
							<li class="center" onclick="addBusiness()">
								<a href="#">新增客户</a>
							</li>
						</ul>
					</div>
					<div class="argi-body">
						<!-- 搜索框 -->
						<div class="form-search-line ">
							<input type="text" id="search" class="argi-form-control" placeholder="请输入名称/地址/联系人 " style="border-color:#5eb95e"/>
							<button class="argi-btn argi-btn-primary" style="width:80px;background-color:#5eb95e;border-color:#5eb95e" onclick="search()">
								搜索
							</button>
						</div>
						<!-- 客户信息表格 -->
						<div class="argi-lists" id="mes_grid"></div>
					</div>
				</div>
			</div>
			<script type="text/javascript" src="../../../script/common/zepto.min.js"></script>
			<script type="text/javascript" src="../../../script/jquery.min.js"></script>
			<script type="text/javascript" src="../../../script/kendo.core.min.js"></script>
			<script type="text/javascript" src="../../../script/kendo.data.min.js"></script>
			<script type="text/javascript" src="../../../script/kendo.binder.min.js"></script>
			<script type="text/javascript" src="../../../script/api.js"></script>
			<script type="text/javascript" src="../../../script/pds.ajax.js"></script>
			<script type="text/javascript" src="../../../script/getLoacat.js"></script>
			<script type="text/javascript">
				//签到按钮
				var userId = null;
				var map = null;
				var ajaxtimer = null;
				var coordinate = null;
				var cardType = null;
				var db = null;
				var longitude = null;
				var latitude = null;
				apiready = function() {
					//获取客户列表信息
					getMessage();
					db = pds.getDb();
					userId = $api.getStorage("userId");
					map = pds.getMap();
					findPushType(userId);
					map.getLocation({
						accuracy : '100m',
						autoStop : true,
						filter : 1
					}, function(ret, err) {
						if (ret.status) {
							var lon = ret.lon;
							//大
							longitude = lon;
							var lat = ret.lat;
							//小,
							latitude = lat;
							map.getNameFromCoords({
								lon : lon,
								lat : lat
							});
						} else {
							//api.alert({msg: err.code});
						}
					});
				};
				//返回上一级
				function back() {
					api.closeWin();
				}

				function punchCard(dom) {
					var cardText = document.getElementById("punchCard").innerHTML;
					//打卡内容
					//创建本地数据库的方法
					creatDatabase();
					push(dom, cardText);
				}

				function creatDatabase() {
					db.openDatabase({
						name : 'pointData',
						path : 'fs://pointData.db'
					}, function(ret, err) {
						if (ret.status) {
							//如果数据库创建成功【就会创建数据表
							db.executeSql({
								name : 'pointData',
								sql : 'CREATE TABLE Point(Id_P int, userId varchar(255), logTime varchar(255), longitude varchar(255), latitude varchar(255),type varchar(255))'
							}, function(ret, err) {
							});
						} else {
						}
					});
				}

				function push(dom, cardText) {
					if (cardText == "签到") {
						api.setPrefs({
							key : 'datakey',
							value : []
						});
						cardType = "3";
						pds.getLocat();
						//定时器器
						ajaxtimer = pds.setInterval();
						api.alert({
							msg : "签到成功,您的位置将会被记录"
						});
					} else if (cardText == "签退") {
						cardType = "4";
						map.stopLocation();
						window.clearInterval(ajaxtimer);
						api.alert({
							msg : "签退成功"
						});
					}
					var myDate = new Date();
					var myDatestring = myDate.getFullYear() + "-" + (myDate.getMonth() * 1 + 1) + "-" + myDate.getDate() + " " + myDate.getHours() + ":" + myDate.getMinutes() + ":" + myDate.getSeconds();
					var userId = $api.getStorage("userId");
					var pushdata = {
						'userId' : userId,
						'time' : myDatestring,
						'type' : cardType,
						'SignDetailsData' : {
							'signinType' : cardType,
							'longitude' : longitude, //ret.lon,
							'latitude' : latitude, //ret.lat,
							'signDate' : myDatestring
						}
					};
					var data = kendo.stringify(pushdata);
					pds.ajaxSubmit({
						url : "app/farmland/recordtime",
						data : {
							'data' : data
						},
						success : function(e) {
							//dom.setAttribute("flag","1");
							if (e) {
								findPushType(userId);
							}
						},
						error : function(e) {
							dom.setAttribute("flag", "1");
							api.alert({
								msg : "服务器异常，请联系管理员!!!"
							});
						}
					});
				}

				var findPushType = function(userId) {
					pds.ajaxSubmit({
						url : "app/farmland/find/pushtype",
						data : {
							'userId' : userId
						},
						success : function(e) {
							if (e) {
								if (e.data == 3) {
									document.getElementById("punchCard").innerHTML = "签退";
								} else {
									document.getElementById("punchCard").innerHTML = "签到";
								}
							}
						},
						error : function(e) {
							api.alert({
								msg : "服务器异常，请联系管理员!!!"
							});
						}
					});
				}
				//获取客户信息
				function getMessage() {
					pds.ajaxSubmit({
						url : "app/customer/getOrderList?t="+new Date(),
						success : function(res) {
							var el = $api.byId("mes_grid");
							$(el).html("");
							var data = res.data;
							for (var i = 0; i < data.length; i++) {
								var str = '<div class="argi-lists-in" onclick="detail(' + data[i].id + ')"><a href="javascript:void(0);"><div class="argi-flex-img"><img src="../../../image/farm_map1.jpg" /></div><div class="argi-flex-infos"><p class="argi-p"><span>公司名称</span><span>' + data[i].name + '</span></p><p class="argi-p"><span>地址</span><span>' + data[i].provinceCode + data[i].cityCode + '</span></p><p class="argi-p"><span>联系人</span><span>' + data[i].contactPerson + '</span></p></div><span class="arrow-a"><img class="sm-button" src="../../../image/next-button.png"></span></a></div>'
								$api.append(el, str);
							}
						},
						error : function(e) {
							api.alert({
								msg : "服务器异常，请联系管理员!!!"
							});
						}
					});
				}

				//搜索信息
				function search() {
					var data = $("#search").val();
					var empty = $('#mes_grid').empty();
					pds.ajaxSubmit({
						url : "app/customer/getOrderList",
						data : {
							seach : data
						},
						success : function(res) {
							var el = $api.byId("mes_grid");
							var data = res.data;
							for (var i = 0; i < data.length; i++) {
								var str = '<div class="argi-lists-in" onclick="detail(' + data[i].id + ')"><a href="javascript:void(0);"><div class="argi-flex-img"><img src="../../../image/farm_map1.jpg" /></div><div class="argi-flex-infos"><p class="argi-p"><span>公司名称</span><span>' + data[i].name + '</span></p><p class="argi-p"><span>地址</span><span>' + data[i].provinceCode + data[i].cityCode + '</span></p><p class="argi-p"><span>联系人</span><span>' + data[i].contactPerson + '</span></p></div><span class="arrow-a"><img class="sm-button" src="../../../image/next-button.png"></span></a></div>'
								$api.append(el, str);
							}
						}
					});
				}

				//进入公司信息详情页面
				function detail(id) {
					$api.openWin({
						name : 'edit_customers',
						url : 'widget://html/mysetting/mysettings/customers/edit_customers.html',
						reload : true,
						selecteIndex:'4',
						pageParam : {
							"id" : id
						},
						animation : {
							type : "movein", //动画类型（详见动画类型常量）
							subType : "from_right", //动画子类型（详见动画子类型常量）
							duration : 300 //动画过渡时间，默认300毫秒
						}
					});
				}

				//进入新增客户页面
				function addBusiness() {
					$api.openWin({
						name : 'new_customers',
						url : 'widget://html/mysetting/mysettings/customers/new_customers.html',
						reload : true,
						selecteIndex:'4'
					});
				}
			</script>
	</body>
</html>