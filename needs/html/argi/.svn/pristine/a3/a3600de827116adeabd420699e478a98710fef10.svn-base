<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>Hello APP</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css" />
    <style type="text/css">
    html,body{
        height: 100%;
    }
    #wrap{
        height: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-flex-flow: column;
               flex-flow: column;
    }
    #header{
        text-align: center; background-color: #FFFFFF; color: #000000;
        width: 100%;
        height:55px;
        font-size: 18px;
        
        margin:0 auto;/*居中显示 */
        display:-moz-box;
        display:-webkit-box;
        display:box;
        
        
    }
    #header h1{
        font-size: 20px; height: 44px; line-height: 44px; margin: 0em; color: #fff;
       
    }
    #main{
    width: 80%;
        height:200px;
        -webkit-box-flex: 1; 
        -webkit-flex: 1;
        flex: 1;
        margin-top:50px;
        background-color:#81A9C3;
    }
    #footer{
        height: 30px; line-height: 30px;
        background-color: #018CEB; 
        width: 100%;
        text-align: center;
    }
    #footer h5{
        color: white;
    }
    .con{font-size: 28px; text-align: center;}
    
     .fr{float: right;}
     .fl{float: left;}
     .pttype{background-color:#81A9C3;}
     .children {display:inline-block; background-color:#81A9C3}
 
     .logotype{
     display:inline-block;
     vertical-align: top;
     width:60px;
     margin-top:0px;
     margin-left:10px;
     padding-top: 5px;
     padding-left:10px;
     
     }  
     .title{
     display:inline-block;
     margin-top:0px;
     padding-top: 13px;
     margin-left:23px;
     }
    #main{ background-color:#FFFFFF;}
  
    </style>
</head>
<body>
    <div id="wrap">
        <div id="header" >
           <!--图片div-->           
           <div class = "logotype "><img src="../../image/logo.png" alt="" class="logotype"/></div>
           <!--文字div-->                   
           <div class ="title">农业规模化种植管理平台</div>           
           
        </div>
        <div id="main">
          
                
        </div>
        <div id="footer">
            <h5>Copyright &copy;<span id="year"></span> </h5>
        </div>
        
        
        
    </div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript">


    function exitApp(){
            api.addEventListener({
                name: 'keyback'
            }, function(ret, err){
            
              api.closeWin();
              api.toast({
                      msg: '再按一次返回键退出'+api.appName,
                      duration:2000,
                      location: 'bottom'
                  });
                  
                  api.addEventListener({
                      name: 'keyback'
                  }, function(ret, err){
						api.closeWin();
                  });                  
                  setTimeout(function(){
                            exitApp();
                  },3000)
            });
        }


    apiready = function(){
   
        var header = $api.byId('header');
        //适配iOS 7+，Android 4.4+状态栏
        $api.fixStatusBar(header);

        var headerPos = $api.offset(header);
        var main = $api.byId('main');
        var mainPos = $api.offset(main);
        var readData = null; 
         //判断是否第一次登陆   
     
	         api.openFrame({
		        name: 'login',
		        //url: 'frm_login.html',
		        url: 'html/login/login.html',
		        bounces: true,
		        rect: {
		            x: 0,
		            y: headerPos.h,
		            w: 'auto',
		            h: mainPos.h
		        },
		        vScrollBarEnabled:false
		    });
	       
	    var year = $api.byId('year');
        year.innerHTML = new Date().getFullYear();

    };
</script>
</html>