	<script id="li-template" type="text/x-kendo-template">
	   <li class="listBlockBig">
            <a href="javascript:void(0);" onclick="toworkDetail('#:id#',this)" class="rightArrow" data-transition="slide-right">
                # if(read==0){#
                	<i class="redRound"></i>
            	#}#
